def factorial(B):
    if B == 0:
        return 1
    elif B != 0:
        return B * factorial(B-1)
B=int(input("Enter a number right now ! : "))
print("The factorial of", B, "is", factorial(B))

X=open("factorial answer.txt", "a+")
for i in range (1):
  X.write("The factorial of " + str(B) + " is " +  str(factorial(B)))
  X.close()
  
  
  
  
  
  
  
